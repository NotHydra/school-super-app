<!DOCTYPE html>
<html lang="en" style="height: 100%;">
    <head>
        <%- include("./../../partials/head.ejs"); -%>
        <%- include("./../../partials/sweet-alert-head.ejs"); -%>
        <%- include("./../../partials/confirm-modal.ejs"); -%>
    </head>

    <body class="hold-transition dark-mode" style="height: 100%; display: flex; flex-direction: column; justify-content: center; align-items: center;">
        <div class="login-box" id="login-form">
            <div class="card">
                <%- include("./../../partials/authentication/brand.ejs"); -%>

                <div class="card-body">
                    <form action="/login-alumni" method="post" class="mb-2" onsubmit="return confirmModal('form', this, {elementId: 'login-form'});">
                        <div class="input-group mb-3">
                            <input type="number" class="form-control" name="nisn" placeholder="NISN" required/>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-address-card"></span>
                                </div>
                            </div>
                        </div>

                        <div class="input-group mb-3">
                            <input type="date" class="form-control" name="tanggal_lahir" placeholder="Tanggal Lahir" required/>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-calendar-days"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm">
                                <button type="submit" class="btn btn-primary btn-block">Login Alumni</button>
                            </div>
                        </div>
                    </form>

                    <p class="m-0 p-0">
                        <a href="/login">Login sebagai user?</a>
                    </p>
                </div>
            </div>
        </div>

        <%- include("./../../partials/authentication/copyright.ejs"); -%>

        <%- include("./../../partials/script.ejs"); -%>
    </body>

    <%- include("./../../partials/toast-script.ejs"); -%>
</html>
