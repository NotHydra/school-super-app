<script>
    function confirmModal(type, value, elementId=null) {
        if (elementId != null) {
            document.getElementById(elementId).style.display = "none";
        }
        
        Swal.fire({
            title: "Apakah anda yakin?",
            icon: "question",
            iconColor: "#f8f9fa",
            focusConfirm: false,
            showCancelButton: true,
            confirmButtonText: "Iya",
            cancelButtonText: "Tidak",
            confirmButtonColor: "#48c774",
            cancelButtonColor: "#F14668",
        }).then((result) => {
            if (result.isConfirmed) {
                if (type == "location") {
                    window.location = value;
                }
                
                else if (type == "form") {
                    value.submit();
                };
            } else {
                if (elementId != null) {
                    setTimeout(function() { document.getElementById(elementId).style.display = "block"; }, 150);
                }
            };
        });

        return false;
    };
</script>